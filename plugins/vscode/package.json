{
  "name": "shrendd-template-editor",
  "displayName": "Shrendd Template Editor",
  "description": "A VS Code extension providing a custom editor for shrendd template files with importShrendd processing.",
  "repository": {
    "type": "git",
    "url": "https://github.com/gtque/shrendd.git"
  },
  "version": "0.0.1",
  "publisher": "your-publisher",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCustomEditor:shrendd.templateEditor"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "shrendd.templateEditor",
        "displayName": "Shrendd Template Editor",
        "selector": [
          {
            "filenamePattern": "*.srd"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "shrendd.openTemplateEditor",
        "title": "Open with Shrendd Template Editor"
      }
    ]
  },
  "scripts": {
    "build": "webpack --mode production",
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.74.0",
    "css-loader": "^7.1.2",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "vscode": "*",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "monaco-editor": "^0.52.2",
    "monaco-editor-webpack-plugin": "^7.1.0"
  }
}
